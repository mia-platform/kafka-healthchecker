{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
